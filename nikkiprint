#!/bin/bash

name_art=(
$'\033[0m'
$'\033[0m'
$'\033[0m'
$'\033[0m'
$'\033[38;5;124m    _   __   _    __      __      _ \033[0m'
$'\033[38;5;124m   / | / /  (_)  / /__   / /__   (_)\033[0m'
$'\033[38;5;160m  /  |/ /  / /  / //_/  / //_/  / / \033[0m'
$'\033[38;5;160m / /|  /  / /  / ,<    / ,<    / /  \033[0m'
$'\033[38;5;196m/_/ |_/  /_/  /_/|_|  /_/|_|  /_/   \033[0m'
$'\033[38;5;196m====================================\033[0m'
$'\033[38;5;196m Niklas Falck - Mediocre coding since 1999\033[0m'
$'\033[0;90m----------------------------------------\033[0m'
)

eagle_art=(
$'\033[38;5;88m///,        ////\033[0m'
$'\033[38;5;88m\\  /,      /  >.\033[0m'
$'\033[38;5;88m \\  /,   _/  /.\033[0m'
$'\033[38;5;124m  \\_  /_/   /.\033[0m'
$'\033[38;5;124m   \\__/_   <\033[0m'
$'\033[38;5;124m   /<<< \\_\\_\033[0m'
$'\033[38;5;160m  /,)^>>_._ \\\033[0m'
$'\033[38;5;160m  (/   \\\\ /\\\\\\\033[0m'
$'\033[38;5;196m       // ````\033[0m'
$'\033[38;5;196m======((\`=======\033[0m'
)


max_lines=${#name_art[@]}
if [ ${#eagle_art[@]} -gt $max_lines ]; then
  max_lines=${#eagle_art[@]}
fi

for ((i=${#name_art[@]}; i<max_lines; i++)); do
  name_art[i]=$'\033[0m'""
done

for ((i=${#eagle_art[@]}; i<max_lines; i++)); do
  eagle_art[i]=$'\033[0m'""
done

for ((i=0; i<max_lines; i++)); do
  printf "%-40b%s\n" "${name_art[i]}" "${eagle_art[i]}"
done

